<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_poster"
        android:layout_width="180dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/shimmer"
        app:cardUseCompatPadding="true" >

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/item_cd_poster" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title"
        style="@style/textTitle"
        android:background="@color/shimmer"
        app:layout_constraintTop_toBottomOf="@id/cv_poster"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:text="@string/lorem"/>

    <TextView
        android:id="@+id/tv_release"
        style="@style/textSub"
        android:background="@color/shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:text="@string/lorem"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_poster2"
        android:layout_width="180dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/shimmer"
        app:cardUseCompatPadding="true" >

        <ImageView
            android:id="@+id/iv_poster2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/item_cd_poster" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title2"
        style="@style/textTitle"
        android:background="@color/shimmer"
        app:layout_constraintTop_toBottomOf="@id/cv_poster2"
        app:layout_constraintStart_toStartOf="@id/cv_poster2"
        android:text="@string/lorem"/>

    <TextView
        android:id="@+id/tv_release2"
        style="@style/textSub"
        android:background="@color/shimmer"
        app:layout_constraintTop_toBottomOf="@id/tv_title2"
        app:layout_constraintStart_toStartOf="@id/cv_poster2"
        android:layout_marginStart="8dp"
        android:text="@string/lorem"/>

</androidx.constraintlayout.widget.ConstraintLayout>